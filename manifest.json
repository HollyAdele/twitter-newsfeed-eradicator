{
  "manifest_version": 2,

  "name": "Twitter Newsfeed Eradicator",
  "description": "This extension displays all of Twitter except the newsfeed.",
  "version": "1.0.1",
  "permissions": ["activeTab", "storage", "https://twitter.com/"],
  "browser_action": {
    "default_icon": "quiet-bird.png",
    "default_popup": "popup.html",
    "default_title": "Twitter Newsfeed Eradicator"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["clean.js"],
      "css": ["default.css"]
    }
  ],
  "web_accessible_resources": ["enable-main-timeline.css", "enable-moments.css"]
}
